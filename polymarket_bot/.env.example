# Polymarket Enhanced Bot Configuration
# Copy this file to .env and fill in your credentials

# ============================================
# REQUIRED: Wallet Configuration
# ============================================
POLYMARKET_PRIVATE_KEY=your_private_key_here
POLYMARKET_FUNDER=your_funder_wallet_address

# ============================================
# REQUIRED: Polymarket API Credentials
# ============================================
# Get these from: Polymarket -> Profile -> Settings -> API Keys
POLYMARKET_API_KEY=your_api_key
POLYMARKET_API_SECRET=your_api_secret
POLYMARKET_PASSPHRASE=your_passphrase

# ============================================
# OPTIONAL: Builder Relayer (for gasless redeems)
# ============================================
# Get these from: Polymarket -> Profile -> Settings -> Builder
POLYMARKET_BUILDER_API_KEY=your_builder_key
POLYMARKET_BUILDER_SECRET=your_builder_secret
POLYMARKET_BUILDER_PASSPHRASE=your_builder_passphrase

# ============================================
# TRADING PARAMETERS
# ============================================
# Entry price per side (default: 0.45 for 45c)
ENTRY_PRICE=0.45

# Position sizing mode: "fixed" or "percent"
# - fixed: Use MAX_POSITION_SIZE regardless of balance
# - percent: Risk RISK_PERCENT of balance per trade
POSITION_SIZING=fixed

# Max shares per side (for fixed mode)
MAX_POSITION_SIZE=100

# Risk percent of balance per trade (for percent mode)
RISK_PERCENT=10

# ============================================
# RISK MANAGEMENT
# ============================================
# Enable stop-loss protection
ENABLE_STOP_LOSS=true

# Stop-loss trigger price (if one side > this, sell the other)
STOP_LOSS_PRICE=0.72

# Maximum daily loss before stopping (USD)
MAX_DAILY_LOSS=50

# ============================================
# BOT BEHAVIOR
# ============================================
# Simulation mode - no real orders (for testing)
SIMULATION_MODE=false

# Auto-redeem resolved positions
AUTO_REDEEM=true

# ============================================
# OPTIONAL: Telegram Alerts
# ============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id
