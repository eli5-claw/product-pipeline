# Polymarket Dual-Timeframe Bot Environment Variables

# Required: Wallet credentials
POLYMARKET_PRIVATE_KEY=your_private_key_here
POLYMARKET_FUNDER=your_funder_address_here

# Optional: Builder relayer for gasless redeems
POLYMARKET_BUILDER_API_KEY=your_builder_api_key
POLYMARKET_BUILDER_SECRET=your_builder_secret
POLYMARKET_BUILDER_PASSPHRASE=your_builder_passphrase

# Optional: 5-minute market settings
TF5_BUY_PRICE=48
TF5_MAX_POSITIONS=10
ENABLE_5MIN=true

# Optional: 15-minute market settings  
TF15_BUY_PRICE=45
TF15_MAX_POSITIONS=5
ENABLE_15MIN=true

# Optional: API endpoints
GAMMA_API_ENDPOINT=https://gamma-api.polymarket.com
CLOB_API_ENDPOINT=https://clob.polymarket.com

# Optional: Chain settings
CHAIN_ID=137
RPC_URL=https://polygon-rpc.com

# Optional: Monitoring
ALERT_WEBHOOK_URL=
POLYGONSCAN_API_KEY=

# Telegram Bot (for remote control)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ALLOWED_TELEGRAM_USERS=your_telegram_user_id  # Comma-separated list, leave empty for any
